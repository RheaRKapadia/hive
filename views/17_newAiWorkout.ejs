<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="location-page">
    <header>
        <div class="logo">
            <div>
                <img src="/images/Logo.png" alt="Hive Logo">
              </div>
            <h1>HIVE</h1>
        </div>
        <nav>
            <div class="user-menu">
                <a href="/<%= userId %>/userprofile">
                    <img src="/images/avatar.png" alt="User Avatar" class="avatar">
                </a>
                <span class="menu-trigger" onclick="toggleDropdown()">Menu</span>
                <div id="myDropdown" class="dropdown-content">
                    <a href="/<%= userId %>/dashboard">Dashboard</a>
                    <a href="/<%= userId %>/workouts/">Workouts</a>
                    <a href="/<%= userId %>/painpoints">Pain Management</a>
                    <a href="/<%= userId %>/locations">Locations</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- ebpage HTML -->
    <main class="outermost-box">
        <!--Navy Box/ Content Outermost Container -->
        <div class="main-box">

            <!-- Page Title -->
            <section class="New-AI-Title">
                <h1>AI Workout Assistant </h1>
                <p>Welcome to your personal AI workout assistant. Choose your equipment and target muscles so that our AI assistant can curate a custom workout. </p>

                <!-- Contents -->
                <form  action="/<%= userId %>/workouts/new/ai" method="POST">
                    <div class="equipment-targets-container">
                        <section class="ai-equipment-container">
                            <h2>Equipment</h2>
                            <div class="checkbox-background">
                                <% equipmentAll.data.forEach(function(equipment, index) { %>
                                    <section class="ai-workout-options">
                                        <input id="equipment<%= index %>" name="equipment" value="<%= equipment %>" type="checkbox">
                                        <label><%= equipment %></label>
                                    </section>
                                <% }); %>
                            </div>
                        </section>

                        <section class="ai-targetMuscle-container">
                            <h2>Target Muscles</h2>
                            <div class="checkbox-background">
                                <% targetMusclesAll.data.forEach(function(muscle, index) { %>
                                    <section class="ai-workout-options">
                                        <input id="muscle<%= index %>" name="muscle" value="<%= muscle %>" type="checkbox">
                                        <label><%= muscle %></label>
                                    </section>
                                <% }); %>
                            </div>
                        </section>
                     </div>

                     <div class="AI-orkoutout-Secio">
                        <section class="ai-workout-slider">
                            <label for="numExercises">
                                Number of Exercises: <span id="sliderValue">1</span>
                                <input type="range" min="1" max="10" value="1" class="slider" id="myRange" name="numExercises">  
                            </label></br>
                            <input type="text" id="workoutName" name='workoutName' placeholder="Workout Name" required>
                        </section>
                    </div>

                    <div>
                        <button class="location-btn AI-Workout-Btn" type="submit">Create Workout</button>
                    </div>

                </form>

               
            </section>

        </div>
    </main>    
</body>
<script>
    // Get references to the slider and value display elements
    const slider = document.getElementById('myRange');
        const sliderValue = document.getElementById('sliderValue');

        // Update the value display when the slider changes
        slider.oninput = function() {
            sliderValue.textContent = this.value;
        }
    
        function toggleDropdown() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

        // Close the dropdown if the user clicks outside of it
        window.onclick = function(event) {
            if (!event.target.matches('.user-menu span')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
</script>
</html>