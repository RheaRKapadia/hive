<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HIVE Workouts List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="myworkouts">
    <header>
        <div class="logo">
            <h1>HIVE</h1>
        </div>
        <nav>
            <div class="user-menu">
                <a href="/user/userprofile">
                    <img src="/images/avatar.png" alt="User Avatar" class="avatar">
                </a>
                <span>Menu</span>
            </div>
        </nav>
    </header>
    <main>
        <h1>Workouts</h1>
        <!-- <a href="/<%= userId %>/workouts/workout" class="btn">Back Day</a> -->
        <a href="/<%= userId %>/workouts/new" class="btn">New Workout</a>
        <% if (messages && messages.error) { %>
            <div class="error-message">
                <%= messages.error %>
            </div>
        <% } %>
        <% if (messages && messages.success) { %>
            <div class="success-message">
                <%= messages.success %>
            </div>
        <% } %>
        <div class="workout-list">
            <% if (workoutsList && workoutsList.length > 0) { %>
                <% workoutsList.forEach(function(workout) { %>
                    <div class="workout-card">
                        <h2 class="workout-title"><%= workout.name %></h2>
                        <p class="workout-location">Location: <%= workout.location %></p>
                        <div class="workout-exercises">
                            <table class="exercise-table">
                                <thead>
                                    <tr>
                                        <th>Exercise Name</th>
                                        <th>Equipment</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% workout.exercises.forEach(function(exercise) { %>
                                        <tr>
                                            <td>
                                                <div class="exercise-name">
                                                    <%= exercise.name %>
                                                </div>
                                            </td>
                                            <td><span class="equipment-tag"><%= exercise.equipment %></span></td>
                                            <td>
                                                <ul>
                                                    <% exercise.description.split('.').filter(point => point.trim()).forEach(function(point) { %>
                                                        <li><%= point.trim() %>.</li>
                                                    <% }); %>
                                                </ul>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="no-workouts-message">No workouts found. Create a new workout to get started!</p>
            <% } %>
        </div>
    </main>
    <button class="new-routine-btn" onclick="window.location.href='/workouts/new'">+</button>
    <div id="exercisePopup" class="popup">
        <div class="popup-content">
            <h3>Exercise Options</h3>
            <button id="editExercise">Edit Exercise</button>
            <button id="deleteExercise">Delete Exercise</button>
            <button id="closePopup">Close</button>
        </div>
    </div>
    <script src="/js/workouts.js"></script>
    <script>
        document.querySelector('.new-routine-btn').addEventListener('click', function() {
            window.location.href = '/user/workouts/new';
        });
    </script>
</body>
</html>
