<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Locations</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="location-page">
    <!-- Navigation Bar Header -->
    <header>
        <div class="logo">
            <div>
                <img src="/images/Logo.png" alt="Hive Logo">
              </div>
            <h1>HIVE</h1>
        </div>
        <nav>
            <div class="user-menu">
                <a href="/<%= userId %>/userprofile">
                    <img src="/images/avatar.png" alt="User Avatar" class="avatar">
                </a>
                <span class="menu-trigger" onclick="toggleDropdown()">Menu</span>
                <div id="myDropdown" class="dropdown-content">
                    <a href="/<%= userId %>/workouts/">Workouts</a>
                    <a href="/<%= userId %>/dashboard">Dashboard</a>
                    <a href="/<%= userId %>/locations">Locations</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Location Content -->
    <main class="outermost-box">

        <!-- Location Main Box -->
        <section class="main-box">
            <!-- Location Header -->
            <div class="location-heading">
                <h1><%= location.locationName %></h1>
                <p>Welcome to your location dashboard! This page gives an overview of the equipment in this location.</p>
            </div>

            <!-- Location Content-->
            <section class="location-content">
                <!-- Set Equipment Content -->
                <div class="table-outer-container">
                    <h3>Equipment Chosen</h3>

                    <!-- Equipment Complete Table -->
                    <div class="equipment-container">

                        <!-- Equipment Search Bar -->
                        <div class="equipment-container-top-bar">
                            <input type="text" id="searchBar" class="equipment-container-search-bar" placeholder="Search Bar">
                        </div>

                        <!-- Header of Equipment Table  -->
                        <div class="equipment-container-header">
                            Equipment
                        </div>

                        <!-- Table Content -->
                        <div id="tableRows">
                            <% location.equipmentAvailable.forEach(equipment => { %>
                            <div class="unique-table-row">
                                <div class="unique-equipment-column"><%= equipment %></div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <!-- 2nd Column of Location Page -->
                <section class="Column2-Location">

                    <!-- Current Location Section -->
                    <section class="Set-New-Location-Sub-Step">
                        <h3>Current Location</h3>
                        <div class="Set-New-Location-Sub-Content">
                            <p><%= location.locationName %></p>
                        </div>
                    </section>

                    <!-- Button Section of 2nd Column -->
                    <section class="Location-Button-Section">
                        <h3>Controls</h3>
                        <div class="Btn-Group">
                            <a href="/<%= userId %>/locations" class="location-btn">Locations</a>
                            <a href="/<%= userId %>/locations/new" class="location-btn">New Location</a>
                            <a href="/<%= userId %>/locations/edit/<%= location.id %>" class="location-btn">Edit Location</a>
                        </div>
                    </section>
                </section>
            </section>
        </section>
    </main>

    <!-- JAVASCRIPT PORTIONS -->
    <script>
        // Search bar functionality
        document.getElementById('searchBar').oninput = function() {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll('.unique-table-row');
            
            rows.forEach(row => {
                var equipmentName = row.querySelector('.unique-equipment-column').textContent.toLowerCase();
                
                if (equipmentName.includes(searchValue)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }        
    </script>
    <script>
        function toggleDropdown() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

        // Close the dropdown if the user clicks outside of it
        window.onclick = function(event) {
            if (!event.target.matches('.menu-trigger')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    </script>
</body>
</html>
