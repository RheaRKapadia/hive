    <%- include('./partials/header.ejs',  { userId: user.id }) %>
    <main class="content-all">
        <div class="section-wrapper">
            <h1 style="position: fixed; top:15vh; left:10vw;">Settings</h1>
            <img src="/images/blueMaskUserProfile.png" alt="blue graphic block" class="user-profile-blue-graphic">
            <div class="user-profile-grid">
                <div style="grid-area:2/1;align-self: center;justify-self: center;">
                    <div style="display:flex; flex-direction: column; justify-content: space-evenly; height: 20vh; align-items: center;">
                        <a href="" style="text-decoration: none; color: white;">Edit Profile Image</a>
                        <a href="" style="text-decoration: none; color: white;">Edit Profile</a>
                        <a href="" style="text-decoration: none; color: white;">Badges</a>
                    </div>
                </div>
                <div id="avatar-root" style="grid-area:2/2;align-self: center;justify-self: center;">
                        <script src="/bundle.js"></script> <!-- Allows you to render react components on a non react app. Pretty Avaatars -->
                </div>
                <div style="grid-area:2/3;align-self: end;justify-self: center;  margin-bottom: 3rem;">
                    <form style="width: 15rem;">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>">
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" id="lastName" name="lastName" value="<%= user.lastName %>">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" value="<%= user.email %>">
                        </div>
                        <!-- <button type="button" class="apply-changes" onclick="window.location.href='/<%= user.id %>/dashboard'">Back to Dashboard</button> -->
                    </form>
                </div>
                <button style="grid-area:3/3;align-self: end;justify-self: end;  margin-bottom: 2rem;margin-right: 2rem; height: 2rem;">Save Changes</button>

            </div>
        </div>
