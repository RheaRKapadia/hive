<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HIVE User Profile</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="user-profile-page">
    <div class="container">
        <div class="settings">
            <div class="sidebar">
                <h2>Settings</h2>
                <ul>
                    <li class="active"><a href="#">Edit Profile</a></li>
                </ul>
            </div>
            <div class="main-content">
                <div class="profile-pic-container">
                    <img src="/images/avatar.png" alt="Profile Picture" class="profile-pic">
                    <button class="change-picture" onclick="openPopup()">Change picture</button>
                </div>
                <form>
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" id="lastName" name="lastName" value="<%= user.lastName %>">
                    </div>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" value="janedoe">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="<%= user.email %>">
                    </div>
                    <button type="button" class="apply-changes" onclick="window.location.href='/<%= user.id %>/dashboard'">Back to Dashboard</button>
                </form>
            </div>
        </div>
    </div>

    <div id="changeProfilePicPopup" class="popup">
        <div class="popup-content">
            <h3>Change Profile Picture</h3>
            <input type="file" id="profilePicInput" accept="image/*">
            <button class="upload" onclick="uploadProfilePic()">Upload</button>
            <button class="cancel" onclick="closePopup()">Cancel</button>
        </div>
    </div>

    <script>
        function openPopup() {
            document.getElementById('changeProfilePicPopup').style.display = 'flex';
        }

        function closePopup() {
            document.getElementById('changeProfilePicPopup').style.display = 'none';
        }

        function uploadProfilePic() {
            closePopup();
            alert('Profile picture updated!');
        }
    </script>
</body>
</html>
