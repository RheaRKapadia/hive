<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>New Workout</h1>
    <div style="overflow:scroll;">
        <ul>
            <% exerciseNames.forEach(function(name) { %>
              <li><%= name %></li>
            <% }) %>
          </ul>
    </div>
    <div class="pagination">
      <% if (currentPage > 1) { %>
          <a href="/user/workouts/new?page=<%= currentPage - 1 %>">&laquo; Previous</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="/user/workouts/new?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
      <% } %>

      <% if (currentPage < totalPages) { %>
          <a href="/user/workouts/new?page=<%= currentPage + 1 %>">Next &raquo;</a>
      <% } %>
    </div>

</body>
</html>