  <body>
    <div class="corner-image top-left-image">
      <img src="/images/track_nobackground.png" alt="Top Left Image">
    </div>
    <div class="corner-image top-right-image">
      <img src="/images/woman_side_profile_nobackground.png" alt="Top Right Image">
    </div>
    <main>
      <div>
        <img src="/images/Logo.png" alt="Hive Logo">
      </div>
        <h1>Unleash Your Potential,</h1>
        <h1 class="hive-heading">Join the HIVE <img class="hivemascot" src="/images/HiveMascot.png" alt="Hive Mascot"></h1>
    </main>
    <div>
      <a href="/login" class="landing-btn">Log In</a>
      <a href="/signup" class="landing-btn">Sign Up</a>
      <button id="sign-out-button" class="landing-btn" style="display: none;">Sign Out</button>
    </div>
    <div class="corner-image bottom-left-image">
      <img src="/images/street_man_nobackground.png" alt="Bottom Left Image">
    </div>
    <div class="corner-image bottom-right-image">
      <img src="/images/stretching_prosthetic_nobackground.png" alt="Bottom Right Image">
    </div>
    <script>
      function waitForClerk(callback) {
        if (window.Clerk) {
          callback();
        } else {
          setTimeout(() => waitForClerk(callback), 100);
        }
      }

      waitForClerk(async function() {
        try {
          await window.Clerk.load();
          const user = await window.Clerk.user;
          const signOutButton = document.getElementById('sign-out-button');

          if (user) {
            signOutButton.style.display = 'inline-block';
            signOutButton.addEventListener('click', () => {
              window.Clerk.signOut();
            });
          }
        } catch (error) {
          console.error('Error checking user status:', error);
        }
      });
    </script>
    <script>
      console.log('Clerk publishable key:', clerkPublishableKey);
      window.addEventListener('load', function() {
        console.log('Window loaded, Clerk object:', window.Clerk);
      });
    </script>
  </body>
