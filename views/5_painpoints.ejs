<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pain Management Calendar</title>
    <link rel="stylesheet" href="/css/style.css"> <!-- Ensure the correct path -->
</head>
<body>
    <main class="outermost-box">
        <header class="logo-and-menu">
            <img src="/images/Logo.png" alt="Hive Heading" class="hive-heading">
            <button class="image-button" aria-label="Menu"></button>
        </header>

        <!-- Set New Location Main Box -->
        <main class="pain-management-main-box">
            <section class="pain-management-content">
                <!-- Header -->
                <h1>Pain Management</h1>

                <!-- Calendar -->
                <section class="Pain-Tracker-Container">
                    <h3>Pain Management Tracker</h3>
                    <div class="calendar-container">
                        <button class="nav-button prev-month">&#9664;</button>
                        <div id="calendar" class="calendar"></div>
                        <button class="nav-button next-month">&#9654;</button>
                    </div>
                </section>

                <!-- Form that will store user pain level and region -->
                <form method="POST" action="/<%= user.id %>/painpoints" class="pain-outBox">
                    <!-- Pain Date -->
                    <section class="date-and-level-container">
                        <div class="date-container">
                            <h3>Date of Pain</h3>
                            <label for="date" class="painDate">
                                <input type="date" id="date" name="date" />
                            </label>
                        </div>
                
                        <div class="level-container">
                            <h3>Pain Level</h3>
                            <label for="painLevel" class="painLevelSlider">
                                <input type="range" min="1" max="10" value="1" name="painLevel" id="painLevel">
                                <section class="slider-values">
                                    <span id="sliderBeg">1</span>
                                    <span id="sliderValue">1</span>
                                    <span id="sliderEnd">10</span>
                                </section>
                            </label>
                        </div>
                    </section>
                    <!-- Regions of Pain -->
                    <section class="RegionsOfPain-Section">
                        <h3>Regions of Pain</h3>
                        <label for="region" class="RegionsOfPain-Outer">
                            <select id="region" name="region" class="RegionsOfPain-filter-bar">
                                <option value="" disabled selected>Regions of Pain</option>
                                <% MusclesList.data.forEach(muscle => { %>
                                    <option value="<%= muscle%>"><%= muscle %></option>
                                <% }); %>
                            </select>
                        </label> 
                    </section>
                    
                    <!-- Submit Button -->
                    <section class="pain-manage-button">
                        <button type="submit" class="location-btn">Submit</button>
                    </section>
                </form>
            </section>

            <section class="pain-management-pics">
                <div class="image-container">
                    <img src="/images/pain_management_front.png" alt="Front View of Body">
                    <img src="/images/pain_management_back.png" alt="Back View of Body">
                </div>
            </section>
        </main>
    </main>

    <!-- Modal for showing pain details -->
    <div id="painDetailsModal" class="modalDate">
        <div class="modalDate-content">
            <span class="close">&times;</span>
            <h2>Pain Details</h2>
            <p id="painDetails"></p>
        </div>
    </div>

    <script>
        // Select the slider and the span element for displaying the value
        const painSlider = document.getElementById('painLevel');
        const sliderValueDisplay = document.getElementById('sliderValue');
        
        // Update the sliderValue when the slider changes
        painSlider.addEventListener('input', function() {
            sliderValueDisplay.textContent = this.value;
        });
        
        document.addEventListener('DOMContentLoaded', () => {
            const painPoints = <%- JSON.stringify(painpointsList) %>;
            
            // Rest of the calendar code
            const calendarContainer = document.getElementById('calendar');
            const prevMonthButton = document.querySelector('.nav-button.prev-month');
            const nextMonthButton = document.querySelector('.nav-button.next-month');
    
            const months = [
                'January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'
            ];
    
            const daysInMonth = [
                31, // January
                28, // February (29 in leap years)
                31, // March
                30, // April
                31, // May
                30, // June
                31, // July
                31, // August
                30, // September
                31, // October
                30, // November
                31  // December
            ];
    
            let currentMonthIndex = new Date().getMonth(); // Start from the current month
            let currentYear = new Date().getFullYear(); // Start from the current year
    
            function renderCalendar(monthIndex, year, painPoints) {
                calendarContainer.innerHTML = ''; // Clear previous content
            
                const monthContainer = document.createElement('div');
                monthContainer.className = 'month';
                monthContainer.innerHTML = `<h3>${months[monthIndex]} ${year}</h3><div class="days"></div>`;
            
                const daysContainer = monthContainer.querySelector('.days');
                let daysInCurrentMonth = daysInMonth[monthIndex];
            
                // Adjust for leap years
                if (monthIndex === 1 && isLeapYear(year)) {
                    daysInCurrentMonth = 29;
                }
            
                // Add days of the month
                for (let day = 1; day <= daysInCurrentMonth; day++) {
                    const dayElement = document.createElement('div');
                    dayElement.className = 'day';
                    dayElement.textContent = day;
            
                    // Format the month and day to always have two digits
                    const dayString = `${year}-${String(monthIndex + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
            
                    // Check if the day matches any pain points
                    const painPoint = painPoints.find(p => p.date === dayString);
            
                    if (painPoint) {
                        dayElement.classList.add('highlighted-day'); // Add the class for pain points
                        dayElement.addEventListener('click', () => showPainDetails(painPoint));
                    }
            
                    daysContainer.appendChild(dayElement);
                }
            
                calendarContainer.appendChild(monthContainer);
            }
            
    
            function isLeapYear(year) {
                return (year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0);
            }
    
            function showPreviousMonth() {
                if (currentMonthIndex === 0) {
                    currentMonthIndex = 11;
                    currentYear--;
                } else {
                    currentMonthIndex--;
                }
                renderCalendar(currentMonthIndex, currentYear, painPoints);
            }
    
            function showNextMonth() {
                if (currentMonthIndex === 11) {
                    currentMonthIndex = 0;
                    currentYear++;
                } else {
                    currentMonthIndex++;
                }
                renderCalendar(currentMonthIndex, currentYear, painPoints);
            }
    
            prevMonthButton.addEventListener('click', showPreviousMonth);
            nextMonthButton.addEventListener('click', showNextMonth);
    
            renderCalendar(currentMonthIndex, currentYear, painPoints);
    
            function showPainDetails(painPoint) {
                const modal = document.getElementById('painDetailsModal');
                const painDetailsElement = document.getElementById('painDetails');
    
                painDetailsElement.innerHTML = `Date: ${painPoint.date}<br>Location: ${painPoint.region}<br>Pain Level: ${painPoint.painLevel}`;
                modal.style.display = 'block';
    
                const closeButton = modal.querySelector('.close');
                closeButton.onclick = function() {
                    modal.style.display = 'none';
                };
    
                window.onclick = function(event) {
                    if (event.target == modal) {
                        modal.style.display = 'none';
                    }
                };
            }
        });
    </script>
    
</body>
</html>
